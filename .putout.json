{
    "plugins": ["printer"],
    "rules": {
        "github/convert-npm-to-bun": "off",
        "putout/apply-lowercase-to-node-builders": "on"
    },
    "match": {
        "*.md": {
            "printer/remove-args": "off"
        },
        "{test,debug.js}": {
            "remove-console": "off",
            "variables/remove-unused": "off",
            "variables/remove-useless": "off"
        },
        "*.ts": {
            "esm": "off"
        }
    }
}
